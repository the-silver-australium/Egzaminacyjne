<Window x:Class="WpfApp1.zad1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="zad1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Right"
                    VerticalAlignment="Top">
            <Button Margin="5" Click="Button_Click">wróć</Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Rodzaj przesyłki">
                <StackPanel>
                    <RadioButton Margin="10">Pocztówka</RadioButton>
                    <RadioButton Margin="10">List</RadioButton>
                    <RadioButton Margin="10">Paczka</RadioButton>
                </StackPanel>
            </GroupBox>
            <Button Margin="10">Sprawdż cenę:</Button>
            <StackPanel Orientation="Horizontal">
                <Image Visibility="Collapsed" Width="100" Source="C:\Users\student\Desktop\github\Egzaminacyjne\WpfApp1\WpfApp1\list.png"></Image>
                <Image Visibility="Collapsed" Width="100" Source="C:\Users\student\Desktop\github\Egzaminacyjne\WpfApp1\WpfApp1\paczka.png"></Image>
                <Image Visibility="Visible" Width="100" Source="C:\Users\student\Desktop\github\Egzaminacyjne\WpfApp1\WpfApp1\pocztowka.png"></Image>
                <Label Content="Cena:" FontSize="18" FontWeight="Bold"></Label>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Dane adresowe">
                <StackPanel>
                    <Label>Ulica z numerami:</Label>
                    <CheckBox Width="200"></CheckBox>
                    <Label>Kod pocztowy:</Label>
                    <TextBox Width="80" HorizontalAlignment="Left" ></TextBox>
                    <Label>Miasto:</Label>
                    <TextBox></TextBox>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
